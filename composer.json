{
    "name": "margusk/accessors",
    "description": "Provides automatic property accessors (setters/getters) with immutability support",
    "type": "library",
    "keywords": [
        "getter",
        "setter",
        "getters",
        "setters",
        "immutable",
        "accessors",
        "property",
        "properties"
    ],
    "authors": [
        {
            "name": "Margus Kaidja",
            "email": "margusk@gmail.com"
        }
    ],
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "phpstan/phpdoc-parser": "^1.13"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.9"
    },
    "autoload": {
        "psr-4": {
            "margusk\\Accessors\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "margusk\\Accessors\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "tests": "vendor/bin/phpunit",
        "phpstan": "vendor/bin/phpstan analyse src/ tests/ -l 9"
    }
}
